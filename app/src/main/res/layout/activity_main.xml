<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureWithLargestChild="true"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="320dp"
        android:layout_height="223dp"

        android:addStatesFromChildren="true"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:id="@+id/buttonAC"
                style="@style/buttonStyle1"
                android:text="@string/ButtonAC" />

            <Button
                android:id="@+id/buttonPlusMinus"
                style="@style/buttonStyle1"
                android:text="@string/buttonPlusMinus" />

            <Button
                android:id="@+id/buttonPercent"
                style="@style/buttonStyle1"
                android:text="@string/buttonPercent" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/buttonStyle2"
                android:text="@string/buttonDivide" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                style="@style/buttonStyle1"
                android:text="@string/button7" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonStyle1"
                android:text="@string/button8" />

            <Button
                android:id="@+id/button9"
                style="@style/buttonStyle1"
                android:text="@string/button9" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/buttonStyle2"
                android:text="@string/buttonMultiply" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                style="@style/buttonStyle1"
                android:text="@string/button4" />

            <Button
                android:id="@+id/button5"
                style="@style/buttonStyle1"
                android:text="@string/button5" />

            <Button
                android:id="@+id/button6"
                style="@style/buttonStyle1"
                android:text="@string/button6" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/buttonStyle2"
                android:text="@string/buttonMinus" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                style="@style/buttonStyle1"
                android:layout_width="71dp"
                android:text="@string/button1" />

            <Button
                android:id="@+id/button2"
                style="@style/buttonStyle1"
                android:text="@string/button2" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonStyle1"
                android:text="@string/button3" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/buttonStyle2"
                android:text="@string/buttonPlus" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button0"
                style="@style/buttonStyle1"
                android:text="@string/_0" />

            <Button
                android:id="@+id/buttonN"
                style="@style/buttonStyle1"
                android:clickable="false"
                android:text="@string/nic" />

            <Button
                android:id="@+id/dot"
                style="@style/buttonStyle1"
                android:text="@string/dot" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/buttonStyle2"
                android:text="@string/equals" />

        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="322dp"
        android:layout_height="149dp"
        android:fontFamily="@font/sourcepro"
        android:gravity="center"
        android:textColor="#818181"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/numberTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:background="#DADADA"
        android:fontFamily="@font/sourcepro"
        android:gravity="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>